# Example environment variables for intelligent_receipt_processing_backend
APP_SECRET_KEY=change-me
# Example MySQL SQLAlchemy URL: mysql+pymysql://user:password@host:3306/dbname
MYSQL_SQLALCHEMY_URL=mysql+pymysql://user:password@mysql:3306/receipts_db

# CORS origins (comma separated or * for all)
CORS_ORIGINS=*

# Token expirations
ACCESS_TOKEN_EXPIRES_HOURS=8
REFRESH_TOKEN_EXPIRES_DAYS=7

# Storage root (mounted volume in production)
STORAGE_ROOT=storage

# Request size in MB
MAX_CONTENT_LENGTH_MB=25

# Database pool tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
