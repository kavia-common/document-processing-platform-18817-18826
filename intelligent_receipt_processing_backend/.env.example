# Flask/App
FLASK_ENV=development
PORT=3001
APP_SECRET_KEY=change-this-in-production

# Database: Provide MySQL SQLAlchemy URL or leave empty to use SQLite fallback (local.db in instance/)
# Format: mysql+pymysql://USER:PASSWORD@HOST:PORT/DBNAME
MYSQL_SQLALCHEMY_URL=

# Test database (used when FLASK_ENV=test/testing/ci)
TEST_MYSQL_SQLALCHEMY_URL=

# SQLAlchemy engine pool tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Tokens
ACCESS_TOKEN_EXPIRES_HOURS=8
REFRESH_TOKEN_EXPIRES_DAYS=7
PASSWORD_HASH_ROUNDS=12

# CORS
# Comma-separated origins or * (e.g., http://localhost:3000)
CORS_ORIGINS=*

# Uploads/Storage
STORAGE_ROOT=storage
MAX_CONTENT_LENGTH_MB=25

# OCR provider stub
OCR_PROVIDER=tesseract
